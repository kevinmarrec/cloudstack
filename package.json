{
  "name": "@kevinmarrec/cloudstack",
  "type": "module",
  "version": "0.7.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "bun@1.2.0",
  "scripts": {
    "build": "bun --filter './packages/*' build",
    "clean": "del packages/*/dist",
    "check": "bun run check:unused && bun run check:eslint && bun run check:stylelint && bun run check:types",
    "check:eslint": "eslint --cache .",
    "check:stylelint": "stylelint --cache '**/*.{css,scss,vue}'",
    "check:types": "vue-tsc --noEmit",
    "check:unused": "knip",
    "lint": "bun run check:eslint && bun run check:stylelint",
    "lint:inspect": "bunx @eslint/config-inspector",
    "postinstall": "bun run build --silent",
    "release": "bumpp",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@kevinmarrec/cloudstack-eslint-config": "workspace:*",
    "@kevinmarrec/cloudstack-stylelint-config": "workspace:*",
    "@kevinmarrec/cloudstack-tsconfig": "workspace:*",
    "@kevinmarrec/cloudstack-unocss-preset": "workspace:*",
    "@types/bun": "^1.2.0",
    "@vitest/coverage-v8": "^3.0.4",
    "@vitest/ui": "^3.0.4",
    "bumpp": "^9.10.2",
    "del-cli": "^6.0.0",
    "eslint": "^9.18.0",
    "knip": "^5.43.1",
    "stylelint": "^16.13.2",
    "taze": "^18.3.0",
    "tinyglobby": "^0.2.10",
    "tsup": "^8.3.5",
    "typescript": "~5.7.3",
    "unocss": "^65.4.3",
    "vitest": "^3.0.4",
    "vue-tsc": "^2.2.0"
  }
}
