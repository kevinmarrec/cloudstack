{
  "name": "@kevinmarrec/cloudstack",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "bun@1.1.43",
  "scripts": {
    "build": "bun run clean && bun --filter './packages/*' build",
    "clean": "rimraf packages/*/dist",
    "lint": "eslint --flag unstable_ts_config . && stylelint '**/*.{css,scss,vue}'",
    "lint:fix": "eslint --flag unstable_ts_config --fix . && stylelint --fix '**/*.{css,scss,vue}'",
    "lint:inspect": "bunx @eslint/config-inspector",
    "postinstall": "bun run build --silent",
    "release": "bumpp",
    "test": "vitest",
    "typecheck": "vue-tsc --noEmit"
  },
  "devDependencies": {
    "@kevinmarrec/cloudstack-eslint-config": "workspace:*",
    "@kevinmarrec/cloudstack-stylelint-config": "workspace:*",
    "@kevinmarrec/cloudstack-tsconfig": "workspace:*",
    "@kevinmarrec/cloudstack-unocss-preset": "workspace:*",
    "@types/bun": "^1.1.16",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "bumpp": "^9.10.0",
    "eslint": "^9.17.0",
    "knip": "^5.42.0",
    "rimraf": "^6.0.1",
    "stylelint": "^16.12.0",
    "taze": "^18.1.0",
    "tsup": "^8.3.5",
    "typescript": "~5.7.3",
    "unocss": "^65.4.0",
    "vitest": "^2.1.8",
    "vue-tsc": "^2.2.0"
  }
}
