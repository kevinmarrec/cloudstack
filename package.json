{
  "name": "@kevinmarrec/cloudstack",
  "type": "module",
  "version": "0.4.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "bun@1.1.45",
  "scripts": {
    "build": "bun run clean && bun --filter './packages/*' build",
    "check": "bun run knip && bun run lint && bun run typecheck",
    "clean": "del packages/*/dist",
    "lint": "eslint . && stylelint '**/*.{css,scss,vue}'",
    "lint:fix": "eslint --fix . && stylelint --fix '**/*.{css,scss,vue}'",
    "lint:inspect": "bunx @eslint/config-inspector",
    "postinstall": "bun run build --silent",
    "release": "bumpp",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "vue-tsc --noEmit"
  },
  "devDependencies": {
    "@kevinmarrec/cloudstack-eslint-config": "workspace:*",
    "@kevinmarrec/cloudstack-stylelint-config": "workspace:*",
    "@kevinmarrec/cloudstack-tsconfig": "workspace:*",
    "@kevinmarrec/cloudstack-unocss-preset": "workspace:*",
    "@types/bun": "^1.1.17",
    "@vitest/coverage-v8": "^3.0.2",
    "@vitest/ui": "^3.0.2",
    "bumpp": "^9.10.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.18.0",
    "knip": "^5.42.2",
    "stylelint": "^16.13.2",
    "taze": "^18.2.0",
    "tsup": "^8.3.5",
    "typescript": "~5.7.3",
    "unocss": "^65.4.2",
    "vitest": "^3.0.2",
    "vue-tsc": "^2.2.0"
  }
}
