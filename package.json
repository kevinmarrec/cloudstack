{
  "name": "@kevinmarrec/cloudstack",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "playground"
  ],
  "scripts": {
    "play": "bun --cwd playground dev",
    "lint": "eslint . && stylelint '**/*.{css,scss,vue}'",
    "lint:fix": "eslint --fix . && stylelint --fix '**/*.{css,scss,vue}'",
    "lint:inspect": "bunx @eslint/config-inspector",
    "test": "vitest",
    "typecheck": "vue-tsc --noEmit"
  },
  "devDependencies": {
    "@kevinmarrec/cloudstack-eslint-config": "workspace:*",
    "@kevinmarrec/cloudstack-stylelint-config": "workspace:*",
    "@kevinmarrec/cloudstack-tsconfig": "workspace:*",
    "@types/bun": "^1.1.6",
    "@vitest/coverage-v8": "^2.0.4",
    "@vitest/ui": "^2.0.4",
    "eslint": "^9.8.0",
    "knip": "^5.27.0",
    "stylelint": "^16.8.0",
    "taze": "^0.16.3",
    "tsup": "^8.2.3",
    "typescript": "~5.5.4",
    "vitest": "^2.0.4",
    "vue-tsc": "^2.0.29"
  }
}
