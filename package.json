{
  "name": "@kevinmarrec/cloudstack",
  "type": "module",
  "version": "0.0.10",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run clean && bun --filter './packages/*' build",
    "clean": "rimraf packages/*/dist",
    "lint": "eslint . && stylelint '**/*.{css,scss,vue}'",
    "lint:fix": "eslint --fix . && stylelint --fix '**/*.{css,scss,vue}'",
    "lint:inspect": "bunx @eslint/config-inspector",
    "postinstall": "bun run build --silent",
    "release": "bumpp",
    "test": "vitest",
    "typecheck": "vue-tsc --noEmit"
  },
  "devDependencies": {
    "@kevinmarrec/cloudstack-eslint-config": "workspace:*",
    "@kevinmarrec/cloudstack-stylelint-config": "workspace:*",
    "@kevinmarrec/cloudstack-tsconfig": "workspace:*",
    "@kevinmarrec/cloudstack-unocss-preset": "workspace:*",
    "@types/bun": "^1.1.14",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "bumpp": "^9.9.0",
    "eslint": "^9.16.0",
    "knip": "^5.39.4",
    "rimraf": "^6.0.1",
    "stylelint": "^16.11.0",
    "taze": "^0.18.0",
    "tsup": "^8.3.5",
    "typescript": "~5.6.3",
    "unocss": "^0.65.1",
    "vitest": "^2.1.8",
    "vue-tsc": "^2.1.10"
  }
}
